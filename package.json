{
    "name": "bunjil",
    "version": "0.1.0",
    "description": "A GraphQL bastion server",
    "license": "MIT",
    "author": "Owen Kelly <owen@owenkelly.com.au>",
    "scripts": {
        "prisma": "cd examples/simple && dotenv -e ../../.env -- prisma info",
        "example-simple-debug":
            "dotenv -- ts-node --inspect-brk examples/simple/src/index.ts",
        "example-simple-clean": "rimraf examples/simple/src/.graphql/**",
        "example-simple-init":
            "yarn example-simple-clean && cd examples/simple && dotenv -e ../../.env -- prisma deploy",
        "dev": "ava-ts ./tests/**/*.spec.ts --watch",
        "clean": "rimraf ./lib ./.nyc_output ./coverage",
        "build": "yarn clean && tsc -p tsconfig.json",
        "unit": "yarn build && nyc ava",
        "check-coverage":
            "nyc check-coverage --lines 50 --functions 70 --branches 60",
        "test": "yarn unit && yarn check-coverage",
        "cov": "yarn unit && yarn html-coverage",
        "html-coverage": "nyc report --reporter=html",
        "send-coverage":
            "nyc report --reporter=lcov > coverage.lcov && codecov",
        "docs":
            "typedoc src/index.ts --excludePrivate --mode file --theme minimal --out lib/docs && opn lib/docs/index.html",
        "docs:json":
            "typedoc --mode file --json lib/docs/typedoc.json src/index.ts",
        "release-minor":
            "yarn run build && standard-version --release-as minor",
        "release-patch":
            "yarn run build && standard-version --release-as patch",
        "release-major":
            "yarn run build && standard-version --sign --release-as major"
    },
    "nyc": {
        "exclude": ["**/*.spec.js"]
    },
    "ava": {
        "files": ["lib/**/*.spec.js"],
        "source": ["lib/**/*"]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "dependencies": {
        "apollo-engine": "^0.8.10",
        "apollo-server-koa": "^1.3.2",
        "bcryptjs": "2.4.3",
        "graphql": "^0.13.1",
        "graphql-add-middleware": "^0.1.5",
        "graphql-binding": "^1.2.5",
        "graphql-playground-middleware-koa": "^1.4.2",
        "graphql-tools": "^2.21.0",
        "graphql-yoga": "1.2.5",
        "jsonwebtoken": "8.1.1",
        "koa": "^2.5.0",
        "koa-bodyparser": "^4.2.0",
        "koa-compose": "^4.0.0",
        "koa-compress": "^2.0.0",
        "koa-router": "^7.4.0",
        "prisma-binding": "^1.5.13",
        "wahn": "^0.9.10",
        "winston": "^2.4.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.1",
        "@types/faker": "^4.1.2",
        "@types/koa": "^2.0.44",
        "@types/node": "^9.4.6",
        "@types/supertest": "^2.0.4",
        "@types/winston": "^2.3.8",
        "ava": "^0.25.0",
        "ava-ts": "^0.24.2",
        "dotenv-cli": "^1.4.0",
        "faker": "^4.1.0",
        "graphql-cli": "2.15.7",
        "husky": "^0.14.3",
        "nyc": "^11.4.1",
        "prisma": "1.3.0",
        "rimraf": "^2.6.2",
        "supertest": "^3.0.0",
        "ts-node": "5.0.0",
        "typescript": "2.7.2",
        "wedgetail": "^1.0.0"
    },
    "resolutions": {
        "graphql": "0.13.1"
    }
}
