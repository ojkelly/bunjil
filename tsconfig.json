{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "lib",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "inlineSources": false,
        "strictNullChecks": true,
        "watch": false,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext", "dom"]
    },
    "filesGlob": [
        "typings.d.ts",
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./.graphql/*.ts",
        "./.graphql/*.graphql"
    ]
}
